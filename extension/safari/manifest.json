{
  "manifest_version": 3,
  "name": "TSJ Filing Online",
  "version": "1.0.0",
  "description": "Extensión para búsqueda automática de expedientes en el TSJ de Quintana Roo",

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "https://www.tsjqroo.gob.mx/*",
    "https://jorch01.github.io/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "TSJ Filing Online"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://www.tsjqroo.gob.mx/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://www.tsjqroo.gob.mx/*"]
    }
  ]
}
